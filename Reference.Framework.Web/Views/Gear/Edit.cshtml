@model Reference.Framework.Web.ViewModels.GearViewModel

@section Styles {
}

<h2>Edit Gear</h2>

@using (Html.BeginForm("Edit", "Gear", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group row">
        @Html.LabelFor(m => m.Name, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = Html.DisplayNameFor(m => m.Name) } })
            <div>@Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })</div>
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(m => m.GearType, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.EditorFor(m => m.GearType, new { htmlAttributes = new { @class = "form-control", @placeholder = Html.DisplayNameFor(m => m.GearType) } })
            <div>@Html.ValidationMessageFor(m => m.GearType, "", new { @class = "text-danger" })</div>
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(m => m.Manufacturer, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.EditorFor(m => m.Manufacturer, new { htmlAttributes = new { @class = "form-control", @placeholder = Html.DisplayNameFor(m => m.Manufacturer) } })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(m => m.Model, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.EditorFor(m => m.Model, new { htmlAttributes = new { @class = "form-control", @placeholder = Html.DisplayNameFor(m => m.Model) } })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(m => m.Size, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.EditorFor(m => m.Size, new { htmlAttributes = new { @class = "form-control", @placeholder = Html.DisplayNameFor(m => m.Size) } })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(m => m.Description, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextAreaFor(m => m.Description, new { @class = "form-control", @cols = "30", @rows = "4", @placeholder = Html.DisplayNameFor(m => m.Description) })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(m => m.DatePurchased, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.EditorFor(m => m.DatePurchased, new { htmlAttributes = new { @class = "form-control datepicker", @placeholder = Html.DisplayNameFor(m => m.DatePurchased) } })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(m => m.CurrentMileage, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.EditorFor(m => m.CurrentMileage, new { htmlAttributes = new { @class = "form-control", @placeholder = Html.DisplayNameFor(m => m.CurrentMileage) } })
        </div>
    </div>
    <div class="row form-group">
        <div class="col-md-4 ">
            <button type="submit" ID="save" class="btn btn-primary">Save</button>
        </div>
        <div class="col-md-4">
            @Html.ActionLink("Cancel", "Index", "Gear", null, new { @class = "btn btn-primary cancel-button" } )
        </div>
    </div>

}

@section Scripts {
    <script type="text/javascript">
        $(function () {
        });
    </script>
}